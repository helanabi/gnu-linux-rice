# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 5
        color_good = "#AACB73"
        color_degraded = "#FFDE7D"
        color_bad = "#F6416C"
}

order += "wireless _first_"
order += "ethernet _first_"
order += "battery all"
order += "disk /"
order += "load"
order += "memory"
order += "volume master"
order += "tztime local"

wireless _first_ {
        format_up = "W: %essid (%quality ) %bitrate"
        format_down = "W: down"
}

ethernet _first_ {
        format_up = "E: %speed"
        format_down = "E: down"
}

battery all {
        format = "BAT: %status"
        format_down = "BAT: X"
        status_chr = "⚡"
        status_bat = "unplugged"
        status_unk = "?"
        status_full = "FULL"
}

disk "/" {
        format = "SSD: %avail"
}

load {
        format = "CPU: %1min"
}

memory {
        format = "RAM: %available"
        threshold_degraded = "1G"
}

volume master {
        format = "♪: %volume"
        format_muted = "♪: X"
}

tztime local {
        format = "%Y-%m-%d %H:%M:%S"
}
